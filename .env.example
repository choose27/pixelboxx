# PixelBoxx - Docker Compose Environment Variables
# Copy this file to .env and update the values

# PostgreSQL Database
POSTGRES_USER=pixelboxx
POSTGRES_PASSWORD=pixelboxx
POSTGRES_DB=pixelboxx

# Database URL (used by API service)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-also-long-and-random
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379

# NATS
NATS_URL=nats://nats:4222

# AI Service
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_API_KEY=internal-service-key-change-this-in-production
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ENABLE_MOCK_RESPONSES=true

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000

# Server Ports (for host access)
API_PORT=3001
WEB_PORT=3000
AI_SERVICE_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
NATS_PORT=4222

# Environment
NODE_ENV=development
